<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:background="@drawable/bg_gradient_title"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/icon_head_defo"/>

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/TextWhiteStyle"
            android:layout_below="@+id/iv_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textSize="15sp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_mine_ticket"
                style="@style/ItemMineStyle"
                android:drawableLeft="@drawable/mine_ticket"
                android:text="借贷券"/>

            <Button
                android:id="@+id/btn_mine_verify"
                style="@style/ItemMineStyle"
                android:drawableLeft="@drawable/mine_verify"
                android:text="优先认证"/>

            <Button
                android:id="@+id/btn_mine_service"
                style="@style/ItemMineStyle"
                android:drawableLeft="@drawable/mine_service"
                android:text="在线客服"/>

            <Button
                android:id="@+id/btn_mine_setting"
                style="@style/ItemMineStyle"
                android:drawableLeft="@drawable/mine_setting"
                android:text="设置"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_mine_help"
            style="@style/ButtonMineBottomStyle"
            android:drawableTop="@drawable/mine_help"
            android:text="借贷攻略"/>

        <View
            android:layout_width="1px"
            android:layout_height="14dp"
            android:background="@color/main_color"/>

        <Button
            android:id="@+id/btn_mine_about_us"
            style="@style/ButtonMineBottomStyle"
            android:drawableTop="@drawable/mine_about_us"
            android:text="关于我们"/>

        <View
            android:layout_width="1px"
            android:layout_height="14dp"
            android:background="@color/main_color"/>

        <Button
            android:id="@+id/btn_mine_wechat"
            style="@style/ButtonMineBottomStyle"
            android:drawableTop="@drawable/mine_wechat"
            android:text="关注微信"/>

    </LinearLayout>

</LinearLayout>