<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.load.third.jqm.view.MaskView
        android:id="@+id/maskView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="400dp"
                    android:layout_height="250dp"
                    android:background="@drawable/bg_dash_white">

                    <ImageView
                        android:id="@+id/iv_idcard_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/iv_idcard_back"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/iv_idcard_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="48dp"
                        android:src="@drawable/iv_idcard_front"
                        android:visibility="gone"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_tips"
                    style="@style/Text16spStyle"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginRight="14dp">

            <ImageView
                android:id="@+id/iv_take"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_camera_take"
                />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_below="@+id/iv_take"
                android:layout_marginTop="30dp"
                android:padding="14dp"
                android:src="@drawable/icon_camera_back"
                />

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>