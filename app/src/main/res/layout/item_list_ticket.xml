<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_ticket">

        <TextView
            style="@style/TextWhiteStyle"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="24dp"
            android:text="借贷券"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_value"
            style="@style/TextWhiteStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginTop="18dp"
            android:text="￥5元"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_date"
            style="@style/Text12spStyle"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="36dp"
            android:text="有效期至2017-03-08"
            android:textColor="@color/text_b5b5b5"/>

        <ImageView
            android:id="@+id/iv_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="14dp"
            android:visibility="gone"
            android:background="@drawable/selector_item_ticket"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tips"
        style="@style/Text14spStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="邀请好友，您将有机会获得借贷券"
        android:textColor="@color/text_898989"
        android:visibility="gone"/>

</LinearLayout>
