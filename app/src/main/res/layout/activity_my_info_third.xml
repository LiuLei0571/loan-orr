<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/iv_my_info_3"/>

            <TextView
                android:id="@+id/tv_relation_family"
                style="@style/TextWhiteItemStyle"
                android:drawableRight="@drawable/icon_more"
                android:hint="请选择亲属关系"/>

            <TextView
                android:id="@+id/tv_phone_family"
                style="@style/TextWhiteItemStyle"
                android:hint="请选择亲属联系人的手机号"
                android:drawableRight="@drawable/icon_more"
                android:inputType="phone"/>

            <TextView
                android:id="@+id/tv_relation_social"
                style="@style/TextWhiteItemStyle"
                android:drawableRight="@drawable/icon_more"
                android:hint="请选择社会关系"/>

            <TextView
                android:id="@+id/tv_phone_social"
                style="@style/TextWhiteItemStyle"
                android:hint="请选择社会联系人的手机号"
                android:drawableRight="@drawable/icon_more"
                android:inputType="phone"/>

            <TextView
                style="@style/Text12spStyle"
                android:layout_marginBottom="37dp"
                android:layout_marginTop="24dp"
                android:text="填写并提交个人信息，审核通过方可借贷"
                android:textColor="@color/main_color"/>
        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/title_commom"/>

</RelativeLayout>